# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/grocery_bot
# Alternative for SQLite (development)
# DATABASE_URL=sqlite:///grocery_bot.db

# Redis Configuration (optional, for caching)
REDIS_URL=redis://localhost:6379/0

# Weather API Configuration
OPENWEATHER_API_KEY=your_openweather_api_key_here

# Application Settings
DEBUG=false
LOG_LEVEL=INFO
TIMEZONE=UTC

# Machine Learning Configuration
ML_MODEL_UPDATE_INTERVAL=86400  # Update interval in seconds (24 hours)
MIN_FEEDBACK_FOR_LEARNING=5     # Minimum feedback samples before personalizing

# Notification Settings
DEFAULT_NOTIFICATION_TIME=09:00  # Time to send notifications (24h format)
MAX_NOTIFICATIONS_PER_DAY=3     # Maximum notifications per user per day

# API Rate Limiting
WEATHER_API_CALLS_PER_HOUR=1000
RATE_LIMIT_PER_USER_PER_MINUTE=10

# Deployment Configuration (uncomment for production)
# PORT=8080
# HOST=0.0.0.0
# WEBHOOK_URL=https://yourdomain.com/webhook

# Optional: Additional Data Sources
# HOLIDAYS_API_KEY=your_holidays_api_key
# NEWS_API_KEY=your_news_api_key

# Development Settings (remove in production)
# MOCK_WEATHER_DATA=true
# TEST_USER_ID=your_telegram_user_id_for_testing
